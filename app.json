{
  "addons": ["heroku-postgresql", "heroku-redis"],
  "buildpacks": [
    {
      "url": "heroku/google-chrome"
    },
    {
      "url": "heroku/chromedriver"
    },
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "BUGSNAG_API_KEY": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "SECRET_KEY": {
      "generator": "secret"
    }
  },
  "scripts": {
    "postdeploy": "python manage.py seed_data"
  },
  "stack": "heroku-22"
}
